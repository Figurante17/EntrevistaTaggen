@model RestauranteTaggen.Models.Restaurante

@{
    ViewBag.Title = "Cadastro de Restaurante";
}

<h2>Cadastro de restaurante</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.codigo)
    <fieldset>
        <legend>Dados</legend>
        <div class="form_field">
            @Html.Label("Nome do Restaurante")
            @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="btnPesquisa">
                    <input type="reset" value="Cancelar" class="btnPadrao btnVermelho" onclick="resetarForm()" />
                    <input type="submit" value="Salvar" class="btnPadrao btnVerde" />
                </div>
            </div>
        </div>
    </fieldset>

}

<div>
    @Html.ActionLink("Lista de restaurantes", "Index")
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/resetForm")
}
