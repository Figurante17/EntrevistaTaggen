@model RestauranteTaggen.Models.Pratos

@{
    ViewBag.Title = "Cadastro de pratos";
}

<h2>Cadastro de pratos</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Dados</legend>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CodigoPratos)
        <div class="form_field">
            @Html.Label("Restaurante", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("RestauranteId", null, "Selecione ", new { @class = "form-control", @required = "true" })

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.Label("Nome", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })

            @Html.Label("Preço", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Preco, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="btnPesquisa">
                    <input type="reset" value="Cancelar" class="btnPadrao btnVermelho" onclick="resetarForm()" />
                    <input type="submit" value="Salvar" class="btnPadrao btnVerde" />
                </div>
            </div>
        </div>
    </fieldset>

}

<div>
    @Html.ActionLink("Lista de pratos", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/validations_pt-br")
    @Scripts.Render("~/bundles/resetForm")
}
